<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LiveScoreApp.Views.NavigationTitleView">
    <ContentView.Content>
        <StackLayout>
            <FlexLayout x:Name="{Binding CurrentSportName}" JustifyContent="Center" AlignItems="Center">
                <Label Style="{StaticResource labelStyle}" Text="{Binding CurrentSportName}" FontSize="9" TextColor="#fff" FontAttributes="Bold" HorizontalOptions="Center" />
                <Label Style="{StaticResource Icons}" Text="&#xe91c;" FontSize="4" TextColor="#fff" Margin="2,0,0,0" />
                <FlexLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding SelectSportCommand}" />
                </FlexLayout.GestureRecognizers>
            </FlexLayout>
            <Label x:Name="{Binding Title}" Style="{StaticResource labelStyle}" Text="{Binding Title}" FontSize="12"  HorizontalOptions="Center" />
        </StackLayout>
    </ContentView.Content>
</ContentView>