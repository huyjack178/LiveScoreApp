<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Score.Views.ScorePage"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             xmlns:converter="clr-namespace:Score.Converters"
             Title="Scores"
             BackgroundColor="{StaticResource PrimaryColor}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Search" Icon="images/search.png" Priority="1" />
    </ContentPage.ToolbarItems>
    <ContentPage.Resources>
        <ResourceDictionary>
            <converter:ShortDayOfWeekConverter x:Key="dayOfWeekConverter" />
        </ResourceDictionary>
        
        <!--Calendar Styles-->
        <Style x:Key="CalendarContainer" TargetType="FlexLayout">
            <Setter Property="Direction" Value="Row" />
            <Setter Property="AlignItems" Value="Stretch" />
            <Setter Property="JustifyContent" Value="SpaceBetween" />
            <Setter Property="HeightRequest" Value="32" />
            <Setter Property="Margin" Value="10,8,10,10" />
        </Style>

        <Style x:Key="CalendarListView" TargetType="ListView">            
            <Setter Property="FlexLayout.AlignSelf" Value="Center" />
            <Setter Property="Rotation" Value="270" />
            <Setter Property="RowHeight" Value="40" />
            <Setter Property="HeightRequest" Value="280" />
            <Setter Property="WidthRequest" Value="32" />
            <Setter Property="Margin" Value="0,0,8,0" />
            <Setter Property="SeparatorVisibility" Value="None" />            
            <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
        </Style>

        <Style x:Key="CalendarDay" TargetType="Label">
            <Setter Property="TextColor" Value="#939393" />
            <Setter Property="HorizontalTextAlignment" Value="Center" />
        </Style>

        <Style x:Key="CalendarBox" TargetType="Frame">
            <Setter Property="CornerRadius" Value="5" />
            <Setter Property="BackgroundColor" Value="#1D2133" />
            <Setter Property="WidthRequest" Value="32" />
            <Setter Property="HeightRequest" Value="32" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="VerticalOptions" Value="Center" />
            <Setter Property="HorizontalOptions" Value="Center" />
        </Style>

        <Style x:Key="HomeIcon" BasedOn="{StaticResource Icons}" TargetType="Label">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="HorizontalTextAlignment" Value="Center" />
            <Setter Property="VerticalTextAlignment" Value="Center" />
            <Setter Property="TextColor" Value="{StaticResource OrangeColor}" />
            <Setter Property="Text" Value="&#xe91e;" />
        </Style>

        <Style x:Key="CalendarIcon" BasedOn="{StaticResource Icons}" TargetType="Label">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="HorizontalTextAlignment" Value="Center" />
            <Setter Property="VerticalTextAlignment" Value="Center" />
            <Setter Property="TextColor" Value="#939393" />
            <Setter Property="Text" Value="&#xe91f;" />
        </Style>

        <!--Scores Styles-->

        <Style x:Key="LeagueFlag" TargetType="Image">
            <Setter Property="Grid.Row" Value="0" />
            <Setter Property="Grid.Column" Value="0" />
            <Setter Property="WidthRequest" Value="16" />
            <Setter Property="Aspect" Value="AspectFit" />
            <Setter Property="Margin" Value="18, 8, 12, 8" />
        </Style>

        <Style x:Key="LeagueName" TargetType="Label">
            <Setter Property="Grid.Row" Value="0" />
            <Setter Property="Grid.Column" Value="1" />
            <Setter Property="VerticalTextAlignment" Value="Center" />
            <Setter Property="HorizontalTextAlignment" Value="Start" />
            <Setter Property="TextColor" Value="{StaticResource GreyColor}" />
            <Setter Property="FontSize" Value="10" />
            <Setter Property="FontAttributes" Value="Bold" />            
        </Style>

        <Style x:Key="MatchDate" TargetType="Label">
            <Setter Property="Grid.Row" Value="0" />
            <Setter Property="Grid.Column" Value="2" />
            <Setter Property="VerticalTextAlignment" Value="Center" />
            <Setter Property="HorizontalTextAlignment" Value="End" />
            <Setter Property="HorizontalOptions" Value="EndAndExpand" />
            <Setter Property="TextColor" Value="{StaticResource GreyColor}" />
            <Setter Property="FontSize" Value="11" />
        </Style>

        <Style x:Key="DetailIcon" BasedOn="{StaticResource Icons}" TargetType="Label">
            <Setter Property="Text" Value="&#xe915;" />
            <Setter Property="TextColor" Value="{StaticResource GreyColor}" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="VerticalTextAlignment" Value="Center" />
            <Setter Property="Margin" Value="12,0" />
            <Setter Property="Grid.Row" Value="0" />
            <Setter Property="Grid.Column" Value="3" />
            <Setter Property="WidthRequest" Value="12" />
        </Style>

        <Style x:Key="MatchStatus" TargetType="Label">
            <Setter Property="Grid.RowSpan" Value="2" />
            <Setter Property="Grid.Column" Value="0" />
            <Setter Property="VerticalTextAlignment" Value="Center" />
            <Setter Property="HorizontalTextAlignment" Value="Center" />
            <Setter Property="TextColor" Value="{StaticResource GreyColor}" />
            <Setter Property="FontSize" Value="10" />
            <Setter Property="FontAttributes" Value="Bold" />            
        </Style>

        <Style x:Key="Team" TargetType="Label">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="HeightRequest" Value="22" />
            <Setter Property="VerticalTextAlignment" Value="Center" />
        </Style>

        <Style x:Key="HomeTeam" BasedOn="{StaticResource Team}" TargetType="Label">
            <Setter Property="Grid.Row" Value="0" />
            <Setter Property="Grid.Column" Value="1" />
            <Setter Property="TextColor" Value="{StaticResource HomeColor}" />
            <Setter Property="Margin" Value="0,4,0,0" />
        </Style>

        <Style x:Key="AwayTeam" BasedOn="{StaticResource Team}" TargetType="Label">
            <Setter Property="Grid.Row" Value="1" />
            <Setter Property="Grid.Column" Value="1" />
            <Setter Property="TextColor" Value="{StaticResource AwayColor}" />
            <Setter Property="Margin" Value="0,0,0,4" />
        </Style>

        <Style x:Key="Score" BasedOn="{StaticResource Team}" TargetType="Label">
            <Setter Property="TextColor" Value="#fff" />
            <Setter Property="HorizontalTextAlignment" Value="End" />
            <Setter Property="Margin" Value="0,0,20,0" />
        </Style>

        <Style x:Key="FavoriteIcon" BasedOn="{StaticResource Icons}" TargetType="Label">
            <Setter Property="Grid.RowSpan" Value="2" />
            <Setter Property="Grid.Column" Value="3" />
            <Setter Property="Text" Value="&#xe90f;" />
            <Setter Property="TextColor" Value="{StaticResource GreyColor}" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="VerticalTextAlignment" Value="Center" />
            <Setter Property="HorizontalTextAlignment" Value="Start" />
        </Style>

        <Style x:Key="ActiveFavoriteIcon" BasedOn="{StaticResource FavoriteIcon}" TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource GreenColor}" />
        </Style>
        
    </ContentPage.Resources>
    <StackLayout>
        <FlexLayout Style="{StaticResource CalendarContainer}">
            <Frame x:Name="HomeIcon" Style="{StaticResource CalendarBox}" Margin="0,0,8,0">
                <Label Style="{StaticResource HomeIcon}" />
            </Frame>
            <ListView x:Name="Calendar"
                      ItemsSource="{Binding CalendarItems}"                      
                      Style="{StaticResource CalendarListView}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell IsEnabled="false">
                            <ViewCell.View>
                                <Frame Style="{StaticResource CalendarBox}"
                                       Rotation="90">
                                    <StackLayout>
                                        <Label Text="{Binding Day}"
                                               Style="{StaticResource CalendarDay}"
                                                FontSize="18" />
                                        <Label Text="{Binding DayOfWeek,  Converter={StaticResource dayOfWeekConverter}}"
                                               Style="{StaticResource CalendarDay}"
                                               FontAttributes="Bold"
                                               FontSize="6" />
                                    </StackLayout>
                                </Frame>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Frame x:Name="CalendarIcon" Style="{StaticResource CalendarBox}">
                <Label Style="{StaticResource CalendarIcon}" />
            </Frame>
        </FlexLayout>
        <ListView
                ItemsSource="{Binding GroupMatches}"
                VerticalOptions="FillAndExpand"
                HasUnevenRows="true"
                IsPullToRefreshEnabled="true"
                RefreshCommand="{Binding RefreshCommand}"
                IsRefreshing="{Binding IsRefreshingMatchList}"
                CachingStrategy="RecycleElement"
                IsGroupingEnabled="True"
                GroupDisplayBinding="{Binding Key}"
                SeparatorColor="{StaticResource LineColor}"
                Style="{StaticResource listViewStyle}">
            <ListView.GroupHeaderTemplate>
                <DataTemplate>
                    <ViewCell Height="28">
                        <StackLayout x:Name="{Binding Key}" Orientation="Horizontal" BackgroundColor="{StaticResource PrimaryColor}">
                            <Image Source="flag_league/flag_england.png" Style="{StaticResource LeagueFlag}" />
                            <Label Text="{Binding Key}" Style="{StaticResource LeagueName}" />
                            <Label Text="24 Jan" Style="{StaticResource MatchDate}" />
                            <Label x:Name="DetailIcon" Style="{StaticResource DetailIcon}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.GroupHeaderTemplate>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View>
                            <StackLayout>
                                <Grid HorizontalOptions="FillAndExpand"
                                      BackgroundColor="#1D2133">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="32" />
                                        <ColumnDefinition Width="25" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>

                                    <Label Text="FT" Style="{StaticResource MatchStatus}" />
                                    <Label Text="{Binding HomeTeam}" Style="{StaticResource HomeTeam}" />
                                    <Label Text="{Binding AwayTeam}" Style="{StaticResource AwayTeam}" />
                                    <Label Grid.Row="0"
                                        Grid.Column="2"
                                        Text="{Binding HomeScore}"
                                        Style="{StaticResource Score}"
                                        Margin="0,4,20,0" />
                                    <Label Grid.Row="1"
                                            Grid.Column="2"
                                            Text="{Binding AwayScore}"
                                            Style="{StaticResource Score}"
                                           Margin="0,0,20,4" />
                                    <Label Style="{StaticResource FavoriteIcon}" />
                                </Grid>
                            </StackLayout>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.Behaviors>
                <b:EventToCommandBehavior EventName="ItemTapped" Command="{Binding SelectMatchCommand}" />
            </ListView.Behaviors>
        </ListView>
    </StackLayout>
</ContentPage>