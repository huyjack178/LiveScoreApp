<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Score.Views.ScorePage"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             Title="Scores"
             BackgroundColor="{StaticResource PrimaryColor}">
    <ContentPage.Resources>
   
        <!--Scores Styles-->

        <Style x:Key="LeagueStyle" TargetType="Label">
            <Setter Property="TextColor" Value="#666" />
            <Setter Property="FontSize" Value="10" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="VerticalTextAlignment" Value="Center" />
            <Setter Property="HorizontalTextAlignment" Value="Start" />
        </Style>

        <Style x:Key="TimeStyle" TargetType="Label">
            <Setter Property="TextColor" Value="#666" />
            <Setter Property="FontSize" Value="11" />            
            <Setter Property="VerticalTextAlignment" Value="Center" />
            <Setter Property="HorizontalTextAlignment" Value="End" />
        </Style>

        <Style x:Key="EventStyle" TargetType="Label">
            <Setter Property="TextColor" Value="#666" />
            <Setter Property="FontSize" Value="10" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="VerticalTextAlignment" Value="Center" />
            <Setter Property="HorizontalTextAlignment" Value="Center" />
        </Style>

        <Style x:Key="HomeTeamStyle" TargetType="Label">
            <Setter Property="TextColor" Value="#30C2FF" />
            <Setter Property="FontSize" Value="12" />
        </Style>

        <Style x:Key="AwayTeamStyle" TargetType="Label">
            <Setter Property="TextColor" Value="#fff" />
            <Setter Property="FontSize" Value="12" />
        </Style>
        
        <Style x:Key="Scorefont" TargetType="Label">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="TextColor" Value="#fff" />
            <Setter Property="HorizontalTextAlignment" Value="End" />
        </Style>
    </ContentPage.Resources>
    <StackLayout>
        <ListView
                ItemsSource="{Binding GroupMatches}"
                VerticalOptions="FillAndExpand"
                HasUnevenRows="true"
                IsPullToRefreshEnabled="true"
                CachingStrategy="RecycleElement"
                IsGroupingEnabled="True"
                GroupDisplayBinding="{Binding Key}"
                SeparatorColor="#2E3245"
                Style="{StaticResource listViewStyle}">
            <ListView.GroupHeaderTemplate>
                <DataTemplate>
                    <ViewCell Height="28">
                        <StackLayout Orientation="Horizontal" Spacing="0" BackgroundColor="#0F111C">
                            <Image Source="flag_league/flag_england.png"
                                       Grid.Row="0"
                                       Grid.Column="0"
                                       WidthRequest="16"
                                       HeightRequest="12"
                                       Aspect="AspectFit"
                                       Margin="18, 8, 12, 8" />

                            <Label Grid.Row="0"
                                       Grid.Column="1"
                                       HeightRequest="30"
                                       Text="{Binding Key}"
                                       Style="{StaticResource LeagueStyle}" />

                            <Label Grid.Row="0"
                                       Grid.Column="2"
                                       Text="24 Jan"
                                       HorizontalOptions="EndAndExpand"
                                       Style="{StaticResource TimeStyle}" />

                            <Label Style="{StaticResource Icons}" Text="&#xe915;"
                                       Grid.Row="0"
                                       Grid.Column="3"
                                       WidthRequest="12"
                                       Margin="8" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.GroupHeaderTemplate>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View>
                            <StackLayout BackgroundColor="Red"
                                         Orientation="Vertical"
                                         VerticalOptions="StartAndExpand"
                                         Spacing="0">
                                <Grid HorizontalOptions="FillAndExpand"
                                      BackgroundColor="#1D2133"
                                      RowSpacing="0"
                                      ColumnSpacing="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="32" />
                                        <ColumnDefinition Width="36" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>

                                    <Label Grid.RowSpan="2"
                                       Grid.Column="0"
                                       Text="FT"
                                       Style="{StaticResource EventStyle}" />

                                    <Label Grid.Row="0"
                                        Grid.Column="1"
                                        Text="{Binding HomeTeam}"
                                        HeightRequest="26"
                                        VerticalTextAlignment="Center"
                                        Style="{StaticResource HomeTeamStyle}" />
                                    <Label Grid.Row="1"
                                        Grid.Column="1"
                                        Text="{Binding AwayTeam}"
                                        HeightRequest="26"
                                        VerticalTextAlignment="Center"
                                        Style="{StaticResource AwayTeamStyle}" />   

                                    <Label Grid.Row="0"
                                        Grid.Column="2"
                                        Text="{Binding HomeScore}"
                                        HeightRequest="26"
                                        VerticalTextAlignment="Center"
                                        Style="{StaticResource Scorefont}" />
                                    <Label Grid.Row="1"
                                        Grid.Column="2"
                                        HeightRequest="26"
                                        VerticalTextAlignment="Center"
                                        Text="{Binding AwayScore}"
                                        Style="{StaticResource Scorefont}" />
                                    
                                    <StackLayout Grid.RowSpan="2"
                                            Grid.Column="3"
                                            Orientation="Horizontal"
                                                 HorizontalOptions="Center"
                                                 VerticalOptions="Center">
                                        <Label 
                                           Style="{StaticResource Icons}"
                                           Text="&#xe90f;"
                                           TextColor="#666666"
                                           FontSize="14"
                                           WidthRequest="16"
                                           Margin="8" />
                                    </StackLayout>
                                </Grid>
                            </StackLayout>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>