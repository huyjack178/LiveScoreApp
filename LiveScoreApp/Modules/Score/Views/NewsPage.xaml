                        <Label Text="Vinicius happy with Real Madrid role" TextColor="#fff" LineBreakMode="CharacterWrap" />
                        <Label Text="28 Jan 2019, 15:04" TextColor="{StaticResource GreyColor}" />
                    </StackLayout>
                </StackLayout>
                <StackLayout Orientation="Horizontal" 
                             VerticalOptions="Center"
                             HorizontalOptions="FillAndExpand"
                             Padding="4"
                             Margin="0,0,0,4"
                             BackgroundColor="{StaticResource SecondColor}">
                    <AbsoluteLayout WidthRequest="96">
                        <Image Source="news/news_5.png" Aspect="AspectFill" />
                    </AbsoluteLayout>
                    <StackLayout Padding="12,0">
                        <Label Text="Alba : United and Juve? My dream is to retire at Barca" TextColor="#fff" LineBreakMode="CharacterWrap" />
                        <Label Text="28 Jan 2019, 15:04" TextColor="{StaticResource GreyColor}" />
                    </StackLayout>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </StackLayout>
</ContentPage>