<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="Setting.Views.DefaultSportPage"
             Title="Default Sport">
    <ContentPage.ToolbarItems x:Uid="toolbarItem">
        <ToolbarItem Name="MenuItem2" Order="Primary" Text="Done" Priority="1" Clicked="OnClickDoneButton" />
    </ContentPage.ToolbarItems>

    <StackLayout Orientation="Vertical" Spacing="0">
        <FlexLayout Style="{StaticResource SettingMenuRow}" JustifyContent="SpaceBetween">
            <Label Text="Soccer" TextColor="#fff" Margin="16,0" />
            <Label Style="{StaticResource Icons}" Text="&#xe914;" TextColor="#3EC28F" FontSize="14" Margin="16,0" />
        </FlexLayout>
        <BoxView Style="{StaticResource MenuLine}" />

        <FlexLayout Style="{StaticResource SettingMenuRow}" JustifyContent="SpaceBetween">
            <Label Text="Basketball" TextColor="#fff" Margin="16,0" />
        </FlexLayout>
        <BoxView Style="{StaticResource MenuLine}" />

        <FlexLayout Style="{StaticResource SettingMenuRow}" JustifyContent="SpaceBetween">
            <Label Text="E-Sport" TextColor="#fff" Margin="16,0" />
        </FlexLayout>
    </StackLayout>
</ContentPage>